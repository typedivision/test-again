#!/usr/bin/env sh

call_test () {
  local script=${t_TEST_NAME#*_}
  {
    echo "#!/usr/bin/env sh"
    cat
    echo ". bin/test-again"
  } > $t_TEST_TMP/$script
  chmod +x $t_TEST_TMP/$script

  t_call -errout env -i $t_TEST_TMP/$script test
  t_expect_value '$t_CALL_STATUS' 1
  t_expect_value '$t_CALL_OUTPUT' "\
1..1
# in setup once
error! setup once failed
# in teardown once"
}

test_exit_fail_in_setup_once () {
  call_test <<EOF
t_setup_once () {
  >&2 echo "in setup once"
  exit 1
}
t_setup () {
  >&2 echo "in setup"
}
t_teardown_once () {
  >&2 echo "in teardown once"
}
t_teardown () {
  >&2 echo "in teardown"
}
test () {
  >&2 echo "in test"
}
EOF
}

test_return_fail_in_setup_once () {
  call_test <<EOF
t_setup_once () {
  >&2 echo "in setup once"
  return 1
}
t_setup () {
  >&2 echo "in setup"
}
t_teardown_once () {
  >&2 echo "in teardown once"
}
t_teardown () {
  >&2 echo "in teardown"
}
test () {
  >&2 echo "in test"
}
EOF
}

test_trap_fail_in_setup_once () {
  call_test <<EOF
t_setup_once () {
  >&2 echo "in setup once"
  false
  return 0
}
t_setup () {
  >&2 echo "in setup"
}
t_teardown_once () {
  >&2 echo "in teardown once"
}
t_teardown () {
  >&2 echo "in teardown"
}
test () {
  >&2 echo "in test"
}
EOF
}

. test/helper
. test-again
